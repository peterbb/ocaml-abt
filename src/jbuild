(jbuild_version 1)

(library
  ((name abt)
   (public_name ocaml-abt)
   (libraries (menhirlib))))

(ocamllex (lexer))
(menhir
    ((modules (parser))
     (flags (--table))))

(rule
    ((targets (parser_error.ml))
     (deps    (parser_error.messages parser.mly))
     (action  (with-stdout-to ${@}
                (run menhir --compile-errors ${<} parser.mly)))))

